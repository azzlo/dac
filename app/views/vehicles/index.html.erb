<div class="container">

<h1 class="text-center">Parque Vehicular</h1>
  <table class="table">
    <thead>
      <tr>
        <th>ECO</th>
        <th>MARCA</th>
        <th>TIPO</th>
        <th>AÃ‘O</th>
        <th>Rendimiento KM/COMB</th>
        <th>PAGO DE VEHICULO POR CATEGORIA</th>
        <th>NUMERO DE EJES</th>
        <th>Placas</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @vehicles.each do |vehicle| %>
        <tr>
          <td><%= vehicle.economic %></td>
          <td><%= vehicle.brand %></td>
          <td><%= vehicle.vehicle_type %></td>
          <td><%= vehicle.year %></td>
          <td><%= vehicle.performance_km_fuel %></td>
          <td><%= vehicle.vehicle_category_and_payment.category if vehicle.vehicle_category_and_payment.present? %></td>
          <td><%= vehicle.edges %></td>
          <td><%= vehicle.license_plate %></td>
          <td><%= link_to 'Show', vehicle %></td>
          <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
          <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Agregar Vehiculo', new_vehicle_path %>
</div>

<div class="container">
  
  <h1>Vehicles</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Marca</th>
        <th>Tipo</th>
        <th>Año</th>
        <th>Categoría</th>
        <th>Ejes</th>
        <th>Placas</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @vehicles.each do |vehicle| %>
        <tr>
          <td><%= vehicle.brand %></td>
          <td><%= vehicle.vehicle_type %></td>
          <td><%= vehicle.year %></td>
          <td><%= vehicle.vehicle_category_and_payment %></td>
          <td><%= vehicle.edges %></td>
          <td><%= vehicle.license_plate %></td>
          <td><%= link_to 'Show', vehicle %></td>
          <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
          <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Nuevo Vehículo', new_vehicle_path %>
</div>

